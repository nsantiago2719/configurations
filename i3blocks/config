[volume-pulseaudio]
command=./volume-pulseaudio/volume-pulseaudio
interval=persist
SUBSCRIBE=1
SHORT_FORMAT=Volume: ${VOL}% ${SYMB}
LONG_FORMAT=Volume: ${VOL}% ${SYMB}

# Battery indicator
#
# The battery instance defaults to 0.
[battery]
label=BAT
command=./battery/battery
label=⚡ 
interval=10
bat_number=0

