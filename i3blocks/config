# command=./mediaplayer/mediaplayer
# instance=spotify
# interval=1
# signal=10

[calendar]
command=./calendar/calendar
interval=10
LABEL=  
DATEFMT=+%H:%M:%S

[network]
command=./custom/network
label=
instance=wlp7s0
interval=5
separator=false
separator_block_width=5

[bandwidth]
command=./custom/bandwidth
label=
instance=wlp7s0;in
interval=1
